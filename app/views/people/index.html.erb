<h1>Interesting people</h1>

<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">
    Search: <input ng-model="nameFilter" list="names">

    <datalist id="names">
      <option ng-repeat="person in people">{{ person.name }}</option>  
    </datalist>

    <table border=1>
      <tr>
        <th ng-click="changeOrderAttribute('name')">Name {{ getSortIcon('name') }}</th>
        <th ng-click="changeOrderAttribute('bio')">Bio {{ getSortIcon('bio') }}</th>
      </tr>
      <tr ng-repeat="person in people | filter: {name: nameFilter} | orderBy:orderAttribute:isOrderDescending">
        <td>{{ person.name }}</td>
        <td>{{ person.bio }}</td>
      </tr>
    </table>
    <h4>Total number of people: {{ people.length }}</h4>
    <h4>Add person</h4>
    <ul>
      <li ng-repeat="error in errors">{{ error }}</li>
    </ul>
    <div>
      <label>Name: </label>
      <input ng-model="newPersonName">
      <label>Bio: </label>
      <input ng-model="newPersonBio">
      <button ng-click="addPerson(newPersonName, newPersonBio)">Add Person</button>
    </div>
  </div>
</div>
